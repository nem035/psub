{
  "name": "psub",
  "author": "Nemanja Stojanovic",
  "description": "Publish/Subscribe in JavaScript (ES6)",
  "main": "dist/index.js",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "babel --out-dir dist src",
    "lint": "eslint . && echo All good!",
    "prebuild": "rimraf build",
    "test": "nyc mocha --compilers js:babel-core/register",
    "validate": "npm-run-all --parallel test lint build",
    "watch:test": "mocha --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nem035/psub.git"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.0.15",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.0.15",
    "babel-preset-es2015": "^6.18.0",
    "babili": "^0.0.9",
    "eslint": "^3.13.1",
    "eslint-config-google": "^0.7.1",
    "expect": "^1.20.2",
    "ghooks": "^2.0.0",
    "mocha": "^3.2.0",
    "mocha-eslint": "^3.0.1",
    "npm-run-all": "^4.0.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4"
  },
  "keywords": [
    "publish",
    "subscribe",
    "design",
    "pattern",
    "javascript"
  ],
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "dependencies": {},
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
